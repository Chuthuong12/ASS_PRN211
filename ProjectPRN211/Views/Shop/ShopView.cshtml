@{
    Layout = "~/Views/Share/_Layout.cshtml";
}
<!-- ShopPage -->
@using ProjectPRN211.Models;
@using PagedList;

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shop</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <!--
        <form>
            <select>
                <option asp-action="Sort" asp-controller="Shop"> <span> Gia Giam dan</span></option>
                <option>  <a asp-action="Sort2" asp-controller="Shop"> <span> Gia Tang dan</span> </a></option>
            </select>
           
        </form>
        -->
        <a asp-action="Sort" asp-controller="Shop"> <span style="left:20px"> -Gia OrderByDescending-   </span> </a>

      <a asp-action="Sort2" asp-controller="Shop"> <span style="left:20px; margin:auto"> Gia OrderBy  -  </span></a>
        <a asp-action="Sort3" asp-controller="Shop"> <span style="left:20px">- Sort ten OrderBy  </span> </a>
        <a asp-action="Sort4" asp-controller="Shop"> <span style="left:20px ">  -sort ten OrderByDescending -   </span> </a>
        <div class="row">
            @foreach (Sanpham SP in @ViewBag.SanPham)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="single-shop-product">

                        <div class="product-upper">
                            <img src="@SP.Anhbia" alt="" style="width: 345px; height: 230px">
                        </div>
                        <h2><a class="" asp-controller="SingleProduct" asp-action="SingleProductView" asp-route-id="@SP.Masp">@SP.Tensp</a></h2>
                        <div class="product-carousel-price">
                            <ins>$ @SP.Giatien</ins>
                        </div>

                        <div class="product-option-shop">
                            <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/canvas/shop/?add-to-cart=70">Add to cart</a>
                        </div>
                    </div>
                </div>

            }
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="product-pagination text-center">
                    <nav>
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Latest jQuery form server -->
<script src="https://code.jquery.com/jquery.min.js"></script>

<!-- Bootstrap JS form CDN -->
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

<!-- jQuery sticky menu -->
<script src="~/js/owl.carousel.min.js"></script>
<script src="js/jquery.sticky.js"></script>

<!-- jQuery easing -->
<script src="~/js/jquery.easing.1.3.min.js"></script>

<!-- Main Script -->
<script src="~/js/main.js"></script>